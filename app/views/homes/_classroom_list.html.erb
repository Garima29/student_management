<div class="main">
  <div class="container hidden" id="listClassrooms">
    <h2>Classrooms Dashboard</h2>
    <table class="table table-striped table-hover" id="classroomTable">
      <thead>
        <tr>
          <th>Name</th>
          <th>No of Students</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    </table>
    <div class="col-md-12 col-sm-12">
      <ul id='classroom-list' class="no-style">
        <li id='classroom-list-template-clone' class="hidden">
          <div class='row'>
            <span class='col-sm-4 span-classroom-name'>
              classroom name
            </span>
            <span class='col-sm-4 span-classroom-students'>
              classroom students
            </span>
            <span>
              <button type="button" class="editClassroom btn btn-primary" id="" button-type="edit" data-li="classroom-list-template-clone">Edit</button>
              <button type="button" class="deleteClassroom btn btn-primary" id="" button-type="delete" data-li="classroom-list-template-clone">Delete</button>
              <button type="button" class="listTeacherStudents btn btn-primary" id="" button-type="showStudents" data-li="teacher-list-template-clone">List students</button>
            </span>
          </div>
        </li>
      </ul>
    </div>
    <button class="addNewClassroom">Add new classroom</button>
    <div id="back-link-go-back">
      <a class="back-link-title">Back</a>
    </div>
  </div>
</div>
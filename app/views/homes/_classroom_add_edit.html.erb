<div class="container hidden" id="addEditClassroomForm">
  <input type="hidden" id="classroom_id" value="">
  <h2>Add/edit classroom</h2>
  <form class="form-horizontal" action="" method="" id="classroomForm">
    <div class="form-group">
      <label class="col-lg-2 control-label">Name</label>
      <div class="col-lg-6">
        <input type="text" name="classroom_name" id="classroomName" class="form-control" value=""/>
      </div>
    </div>
    <div class="form-group">
      <label class="col-lg-2 control-label">School</label>
      <div class="col-lg-6">
        <select name="school_list_element" id="schoolListElement" class="form-control">
          <option value="" disabled selected>Select a school </option>
        </select>
      </div>
    </div>
    <button type="submit" class="btn btn-primary" id="classroomAdd">Add</button>
    <button type="submit" class="btn btn-primary hidden" id="classroomUpdate">Update</button>
    <div class="sideIcons">
      <div id="backLinkGoHome" >
        <a class="back-link-title"><img src="assets/home.png" alt="img"></a>
      </div>
      <div id="backLinkGoBack">
        <a class="back-link-title"><img src="assets/back-arrow.png" alt="img"></a>
      </div>
    </div>
  </form>
</div>
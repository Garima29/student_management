<!DOCTYPE html>
<html lang="en">
<head>
  <title>School Dashboard</title>
  <%=stylesheet_link_tag 'common_manifest'%>
</head>
<body>
<div id="schoolContainer">
  <div class="container hidden" id="listSchools">
    <h2>School Dashboard</h2>
    <table class="table table-striped table-hover" id="schoolTable">
      <thead>
      <tr>
        <th>Name</th>
        <th>City</th>
        <th>State</th>
        <th>Zipcode</th>
        <th>Phone no</th>
      </tr>
      </thead>
      <tbody>
      </tbody>
    </table>
    <button class="addNewSchool btn btn-primary btn-sm">Add new school</button>
  </div>

<div class="all_content">
  <%= render partial: 'homes/school_add_edit'%>
  <%= render partial: 'homes/school_show'%>
  <%= render partial: 'homes/classroom_add_edit'%>
  <%= render partial: 'homes/classroom_list'%>
  <%= render partial: 'homes/teacher_add_edit'%>
  <%= render partial: 'homes/teacher_list'%>
  <%= render partial: 'homes/student_list'%>
  <%= render partial: 'homes/student_add_edit'%>
</div>
</div>
<footer class="footer">

</footer>
</body>
</html>

<%=javascript_include_tag 'common_manifest'%>
<%=javascript_include_tag 'school_manifest'%>
<%=javascript_include_tag 'classroom_manifest'%>
<%=javascript_include_tag 'teacher_manifest'%>
<%=javascript_include_tag 'student_manifest'%>


<script type="text/javascript">
    jQuery(document).ready(function() {
        var listingSchool = new SM.ListingSchool();
    });
</script>
